{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "typeRoots": [
            "types", "screeps"
            , "node_modules/@types"
        ],
        "allowJs": true
    },
    "include": [
        "./src/**/*"
        , "./typings/*"
        , "node_modules/@types/**/*"
    ],
    "exclude": [
        "typings/browser.d.ts",
        "typings/browser",
        "node_modules"
    ]
}
